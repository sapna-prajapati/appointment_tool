<div class="modal-dialog">
  <%= form_for(@client, remote: true, html: {role: :form, 'data-model' => 'client'}) do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Book Appointment</h3>
      </div>

      <div class="modal-body">
        <% if @client.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @client.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name, class: 'control-label', required: true %><br>
          <%= f.text_field :name, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :mobile, class: 'control-label', required: true%><br>
          <%= f.text_field :mobile, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: 'control-label' %><br>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>
      <%= f.fields_for :appointments do |form| %>
        <%= form.hidden_field :slot_id, value: params[:slot_id]%>
        <%= form.hidden_field :date_created, value: params[:appointment_date]%>
      <% end %>
      
      <div class="actions modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <%= f.submit 'Submit', class: 'btn btn-default' %>
      </div>
    </div>

  <% end %>
</div>